!!!
%html
  %head
    %title Store

    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

    = csrf_meta_tags

  %body
    - if signed_in?
      = link_to 'Logout', sign_out_path, method: :delete

    - else
      = link_to 'Login', sign_in_path

    - if current_order
      #cart= render 'orders/cart'

    %div= yield
